<div class="blog-header">
  <h1 class="blog-title">创建博客</h1>
</div>
<%= form_for @post, url: admin_posts_path do |f| %>
  <div class="form-group">
    <label for="post_title">标题</label>
    <%= f.text_field :title, class: "form-control", placeholder: "标题" %>
      </div>
      <div class="form-group">
        <label for="post_author">作者</label>
        <%= f.text_field :author, class: "form-control", placeholder: "作者" %>
      </div>
      <div class="form-group">
        <label for="post_content">内容</label>
        <%= f.text_area :content, class: "form-control wysihtml5", placeholder: "内容" %>
      </div>
      <div class="form-group">
        <label for="post_published_at">发布时间</label>
        <%= f.datetime_field :published_at, class: "form-control", placeholder: "发布时间" %>
      </div>
    <%= f.submit "创建", class: "btn btn-default" %>
  <% end %>
