
  <table class="table table-striped table-hover datatable datatables" id="mytable">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Author</th>
        <th>Published at</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <th><%= post.id %></th>
        <td><%= post.title %></td>
        <td><%= post.author %></td>
        <td><%= l post.published_at %></td>
        <td>
          <%= link_to "修改", edit_admin_post_path(post) %>
          <%= link_to "删除", admin_post_path(post),method: :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <script>
  $(document).ready(function() {
    $("#mytable").dataTable();
  });
  </script>
