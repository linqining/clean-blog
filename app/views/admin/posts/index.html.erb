    <div class="row">
        <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
          <table class="table table-striped table-hover datatable responsive no-wrap " >
            <thead>
              <tr>
                <th>#</th>
                <th>Title</th>
                <th>Author</th>
                <th>Published at</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td><%= post.id %></td>
                <td><%= post.title %></td>
                <td><%= post.author %></td>
                <td><%= l post.published_at %></td>
                <td>
                  <%= link_to "修改", edit_admin_post_path(post) %>
                  <%= link_to "删除", admin_post_path(post),method: :delete %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
